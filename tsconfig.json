{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "#test/*": [
        "./test/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017",
    "types": [
      "@types/bun"
    ]
  },
  "exclude": [
    "node_modules",
    "src/client/components/ui",
    "documentation",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/emails/**/*.tsx",
  ]
}