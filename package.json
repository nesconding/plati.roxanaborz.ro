{
  "name": "plati.rb.ro",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "email:build": "email build --dir ./src/emails --packageManager bun",
    "email:dev": "email dev --dir ./src/emails",
    "email:export": "email export --dir ./src/emails",
    "db:delete": "bun run ./src/server/database/seed/delete.ts",
    "db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:reset": "rm -rf ./src/server/database/drizzle && bun db:delete && bun db:generate && bun db:migrate",
    "db:seed": "bun run ./src/server/database/seed/index.ts",
    "db:studio": "drizzle-kit studio --port 9099",
    "dev": "next dev --turbopack -p 9090",
    "docker:start": "bun run docker compose -f docker-compose.yml up -d",
    "docker:stop": "bun run docker compose -f docker-compose.yml down",
    "lint": "biome check",
    "lint:fix": "biome format --write",
    "start": "next start",
    "setup:calendly": "bun run ./scripts/calendly-setup.ts",
    "setup:business": "bun run ./scripts/business-setup.ts",
    "setup:admins": "bun run ./scripts/admins-setup.ts",
    "setup:all": "bun run setup:admins && bun run setup:business && bun run setup:calendly",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
